#!/bin/bash

CONF=${DATA}/bitcore.conf

if [ ! -e "${CONF}" ]; then
  echo "whitelist=0.0.0.0/0
txindex=0
listen=1
server=1
irc=1
upnp=1

# Make sure port & rpcport matches the
# bitcore.config.json ports for BTX mainnet
port=40008
rpcport=40009
rpcallowip=0.0.0.0/0

rpcuser=btx
rpcpassword=btx

printtoconsole=1" > "${CONF}"
fi

exec bitcored -datadir=${DATA} -conf=${CONF} "$@"
